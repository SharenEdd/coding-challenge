<!DOCTYPE html>
<html>
  <head>
	<title>CareerPlug Coding Challenge | Sharen L. Eddings </title>
	<%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<section class="hero is-danger  is-small">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
			<div class="navbar-brand">
	          <%= link_to 'Home', root_path, class: "navbar-item has-text-warning has-text-weight-bold is-size-4" %>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
			</div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
	            <%= link_to "Create New Post", new_post_path, class:"navbar-item has-text-warning has-text-weight-bold is-size-4" %>
	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>
	<!-- Bulma Hero Container  Pink BackgroundColor -->
	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>
	<!-- Output for posts -->
    <%= yield %>
  </body>
</html>
